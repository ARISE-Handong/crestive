#!/bin/bash

set -x

DIR=`dirname $0`/..
CILLY=${DIR}/cil/bin/cilly

TARGET=`expr $1 : '\(.*\)\.c'`

rm -f idcount stmtcount funcount cfg_func_map cfg branches cfg_branches

${CILLY} $1 -o ${TARGET} --save-temps --doCrestInstrument -lpthread\
    -I${DIR}/include -L${DIR}/lib -lcrest -lstdc++ -lpthread

${DIR}/bin/process_cfg
